#!/bin/bash

# header
# ------------------------------------------------
. $(dirname ${0})/../lib/h.sh
sp_f_load ssh
sp_f_load sql/ite

_f=""
if test "${1}" = "-f" ; then
  _f="${1}"
fi

# main
# ------------------------------------------------
sp_f_ptt "${sp_g_bn}"

for i in "mid" "key" ; do
  f="sp_p_${i}"
  mf="${!f}/${sp_p_ssh_key}.noenc"
  if test -r "${mf}" ; then
    efsmnt ${_f} -m "ssh${i}"
  else
    echo "mounted ${mf}"
  fi
done

f="sp_p_sql"
mf="${!f}/${sp_p_sqlite}.noenc"
if test -r "${mf}" ; then
  efsmnt ${_f} -m "sqlite"
else
  echo "mounted ${mf}"
fi
