#!/bin/bash

# header ------------------------------------------------------------------------
. $(dirname ${0})/../lib/h.sh
sp_f_load ssh

function __list() {
  sp_f_sshlmnt
  echo
}

function __usage() {
  echo "Usage: ${sp_g_bn} [-f] [-m host]"
}

# options -----------------------------------------------------------------------
_m="default"
_f=false

if test $# -eq 0 ; then
  __list
  exit 0
elif test $# -eq 1 ; then
  if test "${1}" = "-h" ; then
    __usage
    exit 1
  fi
  _m="${1}"
else
  while getopts lfhm: o; do
    case "$o" in
      m) _m=$OPTARG;;
      f) _f=true;;
      h) __usage; exit 1;;
      l) __list; exit 0;;
    esac
  done
fi

# main --------------------------------------------------------------------------
sp_f_ptt "${sp_g_bn}"
sp_f_${sp_g_bn} "${_m}" ${_f}
