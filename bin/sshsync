#!/bin/bash
# header ---------------------------------
. $(dirname ${0})/../lib/h.sh
sp_f_load ssh

function __usage() {
  echo "Usage: ${sp_g_bn} [-p] -m host -s <SOURCES>"
  exit 1
}

# options --------------------------------
_s="local .profile"
_p="pull"
_m="default"
__m="./.${sp_g_bn}"
if test -r "${__m}" ; then
  _m=$(cat "${__m}")
elif test $# -eq 0 ; then
  __usage
fi

if test $# -eq 1 ; then
  if test "${1}" = "-h" ; then
    __usage
  fi
  if test "${1}" = "-p" ; then
    _p="push"
  else
    _m="${1}"
  fi
else
  while getopts hm:s:p o; do
    case "$o" in
      h) __usage;;
      m) _m=$OPTARG;;
      s) _s=$OPTARG;;
      p) _p="push";;
    esac
  done
fi

# main -----------------------------------
for i in ${_s} ; do
  ssh${_p} -t3 -m${_m} -s${i}
done
