#!/bin/bash

# header
# ------------------------------------------------
. $(dirname ${0})/../lib/h.sh
sp_f_load fs/enc

# usage
# ------------------------------------------------
function __usage() {
  echo "Usage: ${sp_g_bn} [-f] [-m id]"
}

function __list() {
  sp_f_efslmnt
  echo
}

# options
# ------------------------------------------------
_m="default"
_f=false

if test $# -eq 0 ; then
  __list
  exit 0
elif test $# -eq 1 ; then
  if test "${1}" = "-h" ; then
    __usage
    exit 1
  fi
  _m="${1}"
else
  while getopts hlm:fd o; do
    case "$o" in
      h) __usage; exit 1;;
      l) __list; exit 0;;
      m) _m=$OPTARG;;
      f) _f=true;;
      d) sp_g_debug=true;;
    esac
  done
fi

# main
# ------------------------------------------------
sp_f_ptt "${sp_g_bn}"
sp_f_${sp_g_bn} "${_m}" ${_f}
