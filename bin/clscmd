#!/bin/bash

# header ------------------------------------------------------------------------
. $(dirname ${0})/../lib/h.sh

# options -----------------------------------------------------------------------
_c="default"
_x=""
while getopts c:x:h o; do
  case "$o" in
    c) _c=$OPTARG;;
    x) _x=$OPTARG;;
    h) echo "Usage: ${sp_g_bn} -c cluster -x command"
       exit 1;;
  esac
done

# main --------------------------------------------------------------------------
for hi in ${sp_p_hosts}/* ; do
  hibn=$(basename ${hi})
  sp_g_cluster=""
  . ${hi}
  if test "${sp_g_cluster}" = "${_c}" ; then
    sshcmd -m "${hibn}" -x "${_x}" 2> /dev/null | awk "${sp_g_awkprn}"
  fi
done
