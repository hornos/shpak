#!/bin/bash

# header
# ------------------------------------------------
. $(dirname ${0})/../lib/h.sh
sp_f_load cls

# usage
# ------------------------------------------------
function __usage() {
  echo "Usage: ${sp_g_bn} -c cluster -s source [-t mode]"
  echo "Mode: 1 - scp; 2 - tar; 3 - rsync"
}

# options
# ------------------------------------------------
_c="default"
_s=""
_t=3

if test $# -lt 3 ; then
  __usage
  exit 1
fi
while getopts c:s:h o; do
  case "$o" in
    c) _c=$OPTARG;;
    s) _s=$OPTARG;;
    t) _t=$OPTARG;;
    h) __usage; exit 1;;
  esac
done

# main
# ------------------------------------------------
sp_f_${sp_g_bn} "${_c}" "${_s}" ${_t}
