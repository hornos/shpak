#!/bin/bash

# header ------------------------------------------------------------------------
. $(dirname ${0})/../lib/h.sh

sp_f_load cls

function __usage() {
  echo "Usage: ${sp_g_bn} -c cluster -s source [-t mode]"
}

# options -----------------------------------------------------------------------
_c="default"
_s=""
_t=3

if test $# -eq 0 ; then
  __usage
  exit 1
elif test $# -eq 1 ; then
  __usage
  exit 1
else
  while getopts c:s:h o; do
    case "$o" in
      c) _c=$OPTARG;;
      s) _s=$OPTARG;;
      t) _t=$OPTARG;;
      h) __usage; exit 1;;
    esac
  done
fi

# main --------------------------------------------------------------------------
sp_f_${sp_g_bn} "${_c}" "${_s}" ${_t}
