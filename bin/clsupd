#!/bin/bash

# header
# ------------------------------------------------
. $(dirname ${0})/../lib/h.sh

# usage
# ------------------------------------------------
function __usage() {
  echo "Usage: ${sp_g_bn} -c cluster"
}

# options
# ------------------------------------------------
_c="default"

if test $# -eq 0 ; then
  __usage
  exit 1
elif test $# -eq 1 ; then
  if test "${1}" = "-h" ; then
    __usage
    exit 1
  fi
  _c="${1}"
else
  while getopts hc: o; do
    case "$o" in
      c) _c=$OPTARG;;
      h) __usage; exit 1;;
    esac
  done
fi

# main
# ------------------------------------------------
for hi in ${sp_p_hosts}/ssh/* ; do
  hibn=$(basename ${hi})
  sp_g_cluster=""
  . ${hi}
  if test "${sp_g_cluster}" = "${_c}" ; then
    spupd -m ${hibn}
  fi
done
