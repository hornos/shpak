#!/bin/bash
#/// \file splpc
#/// \brief call a shpak library function
#///
#/// \param [-h] LOGICAL show help
#/// \param -l CHARACTER(*) library to load
#/// \param -f CHARACTER(*) function to call
#/// \param [-a] CHARACTER(*) arguments

#f3--&7-9-V13------21-------------------42--------------------64------72
### HEADER
. $(dirname ${0})/../lib/h.sh


#f3--&7-9-V13------21-------------------42--------------------64------72
### FUNCTIONS
function __usage() {
  echo "Usage: ${sp_g_bn} -l library -f function [-a arguments]"
}


#f3--&7-9-V13------21-------------------42--------------------64------72
### SHORT HAND OPTIONS
_l=${1:-gui}
_f="htxt"
_a="${sp_g_bn}"
if test $# -eq 1 ; then
  if test "${1}" = "-h" ; then
    __usage
    exit 1
  fi
else
### LONG HAND OPTIONS
  while getopts hl:f:a: o; do
    case "${o}" in
      h) __usage; exit 1;;
      l) _l="${OPTARG}";;
      f) _f="${OPTARG}";;
      a) _a="${OPTARG}";;
    esac
  done
fi

#f3--&7-9-V13------21-------------------42--------------------64------72
### MAIN
sp_f_load ${_l}
sp_f_${_f} ${_a}
exit $?
