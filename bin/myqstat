#!/bin/bash
# header ------------------------------------------------------------------------
. $(dirname ${0})/../lib/h.sh

# functions ---------------------------------------------------------------------
function remote_myqstat() {
  local _hi
  local _hibn
  for _hi in ${sp_p_hosts}/* ; do
    _hibn=$(basename ${_hi})
    sp_g_cluster=""
    . ${_hi}
    if test "${sp_g_cluster}" = "${_c}" ; then
      sshcmd -m ${_hibn} -x"myqstat" 2> /dev/null | awk "${sp_g_awkprn}"
      echo
      echo
    fi
  done
}

function local_myqstat() {
  local _r
  local _qsc
  for _qsc in qstat squeue ; do
    which ${_qsc} &>/dev/null
    _r=$?
    if test ${_r} -eq 0 ; then
      ${_qsc} -u ${USER}
      break
    fi
  done
}

function __usage() {
  echo "Usage: ${sp_g_bn} -c cluster"
}

# options -----------------------------------------------------------------------
_c="default"

if test $# -eq 0 ; then
  local_myqstat
elif test $# -eq 1 ; then
  if test "${1}" = "-h" ; then
    __usage
    exit 1
  fi
  _c="${1}"
  remote_myqstat
else
  while getopts hc: o; do
    case "$o" in
      c) _c=$OPTARG;;
      h) __usage; exit 1;;
    esac
  done
  remote_myqstat
fi
