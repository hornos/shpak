#!/bin/bash
# header ------------------------------------------------------------------------
. $(dirname ${0})/../lib/h.sh

sp_f_load ssh

# functions ---------------------------------------------------------------------
function remote_myqstat() {
  local _hi
  local _hibn
  for _hi in ${sp_p_mid}/${sp_p_ssh_key}* ; do
    _hibn=$(basename ${_hi})
    sp_g_cluster=""
    . ${_hi}
    if test "${sp_g_cluster}" = "${_c}" ; then
      sshcmd -m "${_hibn}" -x "myqstat ${_start}"
      echo
      echo
    fi
  done
}

function local_myqstat() {
  local _r
  local _tmp
  local _qsc

  for _tmp in qstat squeue ; do
    which ${_tmp} &>/dev/null
    _r=$?
    if test ${_r} -eq 0 ; then
      _qsc="${_tmp}"
      break
    fi
  done
  if test "${_qsc}" = "" ; then
    return 10
  fi
  ${_qsc} -u ${USER}

  if test "${_start}" = "-s" ; then
    echo
    for _j in $(${_qsc} -u ${USER} | awk '/^[0-9]+/{print $1}') ; do
      showstart ${_j}
    done
  fi
}

function __usage() {
  echo "Usage: ${sp_g_bn} -c cluster"
}

# options -----------------------------------------------------------------------
_c="default"
_start=""
if test $# -eq 0 ; then
  local_myqstat
elif test $# -eq 1 ; then
  if test "${1}" = "-h" ; then
    __usage
    exit 1
  fi
  if test "${1}" = "-s" ; then
    _start="-s"
    local_myqstat
    exit 0
  fi
  _c="${1}"
  remote_myqstat
else
  while getopts hsc: o; do
    case "$o" in
      c) _c=$OPTARG;;
      h) __usage; exit 1;;
      s) _start="-s";;
    esac
  done
  remote_myqstat
fi
