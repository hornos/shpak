#!/bin/bash

# header ------------------------------------------------------------------------
. $(dirname ${0})/../lib/h.sh
sp_f_load ssh

function __usage() {
  echo "Usage: ${sp_g_bn} [-t] [-m host] [-x command]"
}

# options -----------------------------------------------------------------------
_m="default"
_x="ls -lA xfer"
_t=false

if test $# -eq 0 ; then
  __usage
  exit 1
elif test $# -eq 1 ; then
  __usage
  exit 1
else
  while getopts hm:x:t o; do
    case "$o" in
      m) _m=$OPTARG;;
      x) _x=$OPTARG;;
      t) _t=true;;
      h) __usage; exit 1;;
    esac
  done
fi

# main --------------------------------------------------------------------------
sp_f_ptt "${sp_g_bn}"
sp_f_${sp_g_bn} "${_m}" "${_x}" ${_t}
